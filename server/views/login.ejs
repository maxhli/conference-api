<!doctype html>
<html>
<% include common/head %>
<body>
<div class="header">
    <div class=
         "home-menu pure-menu pure-menu-open pure-menu-horizontal pure-menu-fixed">
        <a class="pure-menu-heading" href="">Conference API</a>
        <ul>
            <li><a href="/">Home</a></li>
            <li class="pure-menu-selected"><a href="/login">Login</a></li>
            <li><a href="/signup">Signup</a></li>
        </ul>
    </div>
</div>
<div class="container">
    <h1>Login</h1>
    <% if (message.length > 0) { %>
    <div class="alert"><%= message %></div>
    <% } %>
    <form class="pure-form" action="/login" method="post">
        <fieldset>
            <input class="pure-input-1" type="email" id="email"
                   placeholder="Email Address" name="email" required=""/>
            <input class="pure-input-1" type="password" id="email"
                   placeholder="Password" name="password" required=""/>
            <button type = "submit" class=
            "pure-button pure-button-primary">Submit</button>
            <p>Don't have an account?
                <a href="/signup">Signup</a>or go back to
                <a href="/">home</a>.</p>
        </fieldset>
    </form>
</div>
<% include common/footer %>
</div>
</body>
</html>
